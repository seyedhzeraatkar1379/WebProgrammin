<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="Auction_website">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>models.AuctionWinnerTable</class>
    <class>models.ArtinfoTable_1</class>
    <class>models.AdminTable_1</class>
    <class>Model.UserTable</class>
    <class>Model.AdminTable</class>
    <class>Model.AuctionParticipantTable</class>
    <class>Model.AuctionTable</class>
    <class>Model.ArtinfoTable</class>
    <class>Model.ContactusTable</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/auction_site_db?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="hibernate.show_sql" value="true"/>
      <!--<property name="eclipselink.logging.level" value="FINE"/>-->
    </properties>
  </persistence-unit>
</persistence>
