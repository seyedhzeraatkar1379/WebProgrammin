<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginController</servlet-name>
        <jsp-file>/admin/loginpage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginController</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminHomePage</servlet-name>
        <jsp-file>/admin/homepage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHomePage</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminArtManage</servlet-name>
        <jsp-file>/admin/artmanager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminArtManage</servlet-name>
        <url-pattern>/admin/artmanager</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminAuctionManager</servlet-name>
        <jsp-file>/admin/auctionmanager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAuctionManager</servlet-name>
        <url-pattern>/admin/auctionmanager</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminParticipantAuctionManager</servlet-name>
        <jsp-file>/admin/auctionparticipant.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminParticipantAuctionManager</servlet-name>
        <url-pattern>/admin/auctionparticipantmanager</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminUserManager</servlet-name>
        <jsp-file>/admin/usermanager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserManager</servlet-name>
        <url-pattern>/admin/usermanager</url-pattern>
    </servlet-mapping>
</web-app>
